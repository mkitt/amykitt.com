{
  "name": "amykitt",
  "description": "Web site for Amy Kitt",
  "homepage": "https://amykitt.com/",
  "version": "0.0.1",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "front-matter": "4.0.2",
    "intersection-observer": "0.12.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-intersection-observer": "8.31.0",
    "react-markdown": "5.0.3",
    "react-modal": "3.12.1",
    "smoothscroll-polyfill": "0.4.4"
  },
  "devDependencies": {
    "@emotion/jest": "11.2.1",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-modal": "3.12.0",
    "@types/smoothscroll-polyfill": "0.3.1",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "netlify-cli": "3.16.0",
    "prettier": "2.2.1",
    "react-scripts": "4.0.3",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "react-scripts build",
    "chex": "yarn tsc && yarn lint && CI=1 yarn test",
    "deploy": "netlify deploy --prod --auth $NETLIFY_AUTH_TOKEN --site $NETLIFY_SITE_ID --dir build --message \"Deployed $(git rev-parse --short HEAD)\"",
    "deploy:manual": "set -a; . ./.env.local; set +a && yarn deploy",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-pattern react-app-env.d.ts src/",
    "prebuild": "node ./prebuild.js",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "@emotion/jest"
    ]
  },
  "lint-staged": {
    "./**/*.{css,html,js,jsx,json,gql,md,ts,tsx,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
