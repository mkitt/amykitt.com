{
  "name": "amykitt",
  "description": "Web site for Amy Kitt",
  "homepage": "https://amykitt.com/",
  "version": "0.0.1",
  "license": "MIT",
  "dependencies": {
    "@emotion/core": "10.0.28",
    "@emotion/styled": "10.0.27",
    "front-matter": "4.0.2",
    "intersection-observer": "0.11.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-intersection-observer": "8.31.0",
    "react-markdown": "4.3.1",
    "react-modal": "3.11.2",
    "smoothscroll-polyfill": "0.4.4"
  },
  "devDependencies": {
    "@types/jest": "26.0.5",
    "@types/node": "14.0.23",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "@types/react-modal": "3.10.6",
    "@types/smoothscroll-polyfill": "0.3.1",
    "husky": "4.2.5",
    "jest-emotion": "10.0.32",
    "lint-staged": "10.2.11",
    "netlify-cli": "2.58.0",
    "prettier": "2.0.5",
    "react-scripts": "3.4.1",
    "typescript": "3.9.7"
  },
  "scripts": {
    "build": "react-scripts build",
    "chex": "yarn tsc && yarn lint && CI=1 yarn test",
    "deploy": "netlify deploy --prod --auth $NETLIFY_AUTH_TOKEN --site $NETLIFY_SITE_ID --dir build --message \"Deployed $(git rev-parse --short HEAD)\"",
    "deploy:manual": "set -a; . ./.env.local; set +a && yarn deploy",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-pattern react-app-env.d.ts src/",
    "prebuild": "node ./prebuild.js",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "jest-emotion"
    ]
  },
  "lint-staged": {
    "./**/*.{css,html,js,jsx,json,gql,md,ts,tsx,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
